@model juegoPD.Models.Jugador
@{
    Layout = "_LayoutJuego";
}

<div class="row">
    <div class="col s12">
        <div class="row valign-wrapper">
            <div class="col s12">
                <h4 class="tituloPrincipal" style="text-align:center;color: #303f9f;font-weight: bold;">
                    Bienvenido, @Model.nombre @Model.apellido
                </h4>
            </div>
        </div>
    </div>
</div>

<div class="row" id="caracteristicas">

</div>


<div class="divider"></div>
<div class="container">
    <div class="row">
        <div class="col s12 m8">
            <h4 style="color: #7b1fa2;font-weight: bold;">Respuestas</h4>
            <div class="row">
                <div class="col s12 m6" id="subCaracteristicas" style="position: relative; height: 150px;">
                </div>
            </div>
        </div>
        <div class="col s12 m4 cyan lighten-5">
            <h4 style="text-align: center;color: #7b1fa2;font-weight: bold;">Puntaje Final</h4>
            <div class="row">
                <div class="col s12 m6">
                    <p class="fallido">
                        Fallidos Totales:
                        <strong style="color: red;font-weight: bold">0</strong>
                    </p>
                    <p class="acierto">
                        Aciertos Totales:
                        <strong style="color: green;font-weight: bold">0</strong>
                    </p>
                </div>
                <div class="col s12 m6">
                    <form method="post" action="/Home/ToPlay">
                        <input type="text" id="val1" name="bueno" style="display:none" />
                        <input type="text" id="val2" name="malo" style="display:none" />
                        <div style="padding: 25px 0">
                            <button class="btn waves-effect waves-light" type="submit" name="action">
                                ENVIAR
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="page-footer teal lighten-1">
    <div class="footer-copyright">
        <div class="container" style="text-align: center">
            © 2019 Copyright Team
        </div>
    </div>
</footer>